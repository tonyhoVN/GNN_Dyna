{
  "data": {
    "data_dir": "data",
    "file_glob": "*data.npz",
    "percent": 70
  },
  "split": {
    "train": 0.75,
    "valid": 0.15,
    "test": 0.1
  },
  "model": {
    "type": "baseline",
    "hidden_dim": 128,
    "node_encoder": {
      "feat_dim": 6,
      "lstm_layers": 1,
      "use_mass": true,
      "use_pos": false,
      "layer_norm": true
    },
    "edge_encoder": {
      "feat_dim": 7,
      "layer_norm": true
    },
    "gnn_topology": {
      "n_gnn_layers": 4,
      "shared_layers": true, 
      "layer_norm": true
    },
    "gnn_surface": {
      "enabled": true,
      "distance_threshold": 22.0,
      "layer_norm": true
    },
    "decoder": {
      "out_dim": 6
    }
  },
  "training": {
    "batch_size": 12,
    "learning_rate": 1e-4,
    "epochs": 100,
    "save_every": 10
  }
}
