{
  "data": {
    "data_dir": "data",
    "file_glob": "*data.npz"
  },
  "split": {
    "train": 0.75,
    "valid": 0.15,
    "test": 0.1
  },
  "model": {
    "type": "general",
    "hidden_dim": 256,
    "node_encoder": {
      "feat_dim": 9,
      "lstm_layers": 1,
      "use_mass": true,
      "use_pos": false,
      "layer_norm": false
    },
    "edge_encoder": {
      "feat_dim": 7,
      "layer_norm": false
    },
    "gnn_topology": {
      "n_gnn_layers": 4
    },
    "gnn_surface": {
      "enabled": true
    },
    "decoder": {
      "out_dim": 9
    },
    "mlp": {
      "layer_norm": false
    }
  },
  "training": {
    "batch_size": 12,
    "learning_rate": 1e-5,
    "epochs": 100,
    "save_every": 10
  }
}
