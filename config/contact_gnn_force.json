{
  "data": {
    "data_dir": "data",
    "file_glob": "*data.npz"
  },
  "split": {
    "train": 0.75,
    "valid": 0.15,
    "test": 0.1
  },
  "model": {
    "type": "force",
    "hidden_dim": 256,
    "node_encoder": {
      "feat_dim": 6,
      "layer_norm": false
    },
    "edge_encoder": {
      "feat_dim": 2,
      "num_materials": 2,
      "mat_emb_dim": 5,
      "layer_norm": false
    },
    "gnn_topology": {
      "n_gnn_layers": 4
    },
    "gnn_surface": {
      "enabled": true
    },
    "head_topo": {
      "out_dim": 3
    },
    "head_surface": {
      "out_dim": 3
    },
    "decoder": {
      "in_dim": 9,
      "hidden_dim": 256,
      "n_layers": 2,
      "out_dim": 6
    }
  },
  "training": {
    "batch_size": 8,
    "learning_rate": 5e-5,
    "epochs": 100,
    "save_every": 10
  }
}
